RewriteEngine on

RewriteCond %{REQUEST_METHOD} DELETE
RewriteRule ^cms/article/([0-9]+)$ article/delete.php [L]

RewriteCond %{REQUEST_METHOD} POST
RewriteRule ^cms/article-edit/([0-9]+|new)$ article-edit/save.php [L]

RewriteCond %{REQUEST_METHOD} GET
RewriteRule ^cms/articles/?$ articles/index.php [L]
RewriteRule ^cms/article/([0-9]+)/similar$ article/similar.php [L]
RewriteRule ^cms/article/([0-9]+)$ article/index.php [L]
RewriteRule ^cms/article-edit/([0-9]+)|new$ article-edit/index.php [L]
